<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_bot">

  <!-- base_link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- joint1 and link1 -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child  link="link1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- link2 -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

</robot>

